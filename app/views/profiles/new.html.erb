<!--This new.html.erb file is for the Profiles to store user profiles in.-->
<!--< %@variable% >-->
<style>
.well {
    margin-left: auto;
    margin-right: auto;
    width: 95%;  
    min-height: 21px;
    padding: 28px;
    margin-bottom: 20px;
    background-color: #788DFF;
    border: 1px solid #e3e3e3;
    border-radius: 8px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
}
</style>

<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
        <h1 class = "text-center">Creat Your Profile!</h1>
        <p class = "text-center">Become part of the worlds greatest premier site for Ninjas and Entrepreneurship.</p>
        <div class="well">
            <%= form_for @profile, url: user_profile_path do |f| %>
                <div class="form-group">
                  <%= f.label :first_name %>
                  <%= f.text_field :first_name, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :last_name %>
                  <%= f.text_field :last_name, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :job_title %>
                  <%= f.select :job_title, ['Ninja', 'Entrepreneur', 'Investor'], {}, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :phone_number %>
                  <%= f.text_field :phone_number, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :contact_email %>
                  <%= f.text_field :contact_email, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :description %>
                  <%= f.text_area :description, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.submit "Update Profile", class: 'btn btn-warning btn-lg btn-block' %>
                </div>
            <% end %>
        </div>
    </div>
</div>