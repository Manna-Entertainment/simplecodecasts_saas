<!--This "new.html.erb" for the Sign Up Page.-->

<style>
    img {
  margin-left: auto;
  margin-right: auto;
  width: 95%;  
	padding: 2px;
	margin: 15px;
	border: 7px solid orange;
}

#SignUp {
    margin-left: auto;
    margin-right: auto;
    width: 100%; 
    position: relative;
    bottom: -14px;
    right: 0px;
    /* padding: 0px; */
}

#LogIn {
    margin-left: auto;
    margin-right: auto;
    width: 100%; 
    position: relative;
    bottom: 2px;
    left: 0px;
}

.well {
    margin-left: auto;
    margin-right: auto;
    width: 100%;  
    min-height: 21px;
    padding: 28px;
    margin-bottom: 20px;
    background-color: #E0BD9A;
    border: 1px solid #e3e3e3;
    border-radius: 8px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
}

</style>
<div class="col-md-6 col-md-offset-3 text-center">
  <% if params[:plan] == '2' %>
      <h1>Pro Account</h1>
      <p>Subscribe for only <strong>$10/month</strong>, and get contact information & perks!</p>
  <% else %>
      <h1>Basic Account</h1>
      <p>Sign up for Free, and get basic access to our growing community!</p>
  <% end %>
</div>

<div class: "row">
  <div class="col-md-4 col-md-offset-4">
    <div class= "well">
      <h2><u>Sign up</u></h2>
      
    <% if params[:plan] == '2' %>
      <%= render "pro_form" %>
    <% else %>
      <%= render "basic_form" %>
    <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div>
