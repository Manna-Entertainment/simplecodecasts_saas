<!--This "new.html.erb" for the Sign Up Page.-->

<style>
    img {
  margin-left: auto;
  margin-right: auto;
  width: 95%;  
	padding: 2px;
	margin: 15px;
	border: 7px solid orange;
}

#SignUp {
    margin-left: auto;
    margin-right: auto;
    width: 100%; 
    position: relative;
    bottom: -14px;
    right: 0px;
    /* padding: 0px; */
}

#LogIn {
    margin-left: auto;
    margin-right: auto;
    width: 100%; 
    position: relative;
    bottom: 2px;
    left: 0px;
}

.well {
    margin-left: auto;
    margin-right: auto;
    width: 100%;  
    min-height: 21px;
    padding: 28px;
    margin-bottom: 20px;
    background-color: #E0BD9A;
    border: 1px solid #e3e3e3;
    border-radius: 8px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
}

</style>

<div class: "row">
  <div class="col-md-4 col-md-offset-4">
    <div class= "well">
      <h2><u>Sign up</u></h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      
        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
      
        <div class="field form-group">
          <%= f.label :password %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
      
        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
      
        <div id ="LogIn" class="form-group actions btn btn-success btn-lg btn-block">
	        <a href="/users/sign_in" class: "form-control">Log In Page</a>
        </div>
        
        <div id ="SignUp" class="form-group actions">
          <%= f.submit "Confirm Sign Up", class: 'btn btn-info btn-lg btn-block' %>
        </div>
        <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

